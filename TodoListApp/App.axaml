<Application
    RequestedThemeVariant="Default"
    x:Class="TodoListApp.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:converters="using:TodoListApp.Converters"
    xmlns:local="using:TodoListApp"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.Resources>
        <converters:BoolToTextDecorationConverter x:Key="BoolToTextDecorationConverter" />
        <converters:BoolToForegroundConverter x:Key="BoolToForegroundConverter" />
        <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
        <converters:CategoryToClassConverter x:Key="CategoryToClassConverter" />
        <converters:ProgressToWidthConverter x:Key="ProgressToWidthConverter" />
        <converters:DateTimeToNullableConverter x:Key="DateTimeToNullableConverter" />
        <converters:PriorityToColorConverter x:Key="PriorityToColorConverter" />
        <converters:DateToColorConverter x:Key="DateToColorConverter" />
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>


    <Application.Styles>
        <FluentTheme />

        <!--  Custom Application Styles  -->
        <Style Selector="Window">
            <Setter Property="FontFamily" Value="Segoe UI, Arial, sans-serif" />
        </Style>

        <!--  Scrollbar Styling  -->
        <Style Selector="ScrollViewer">
            <Setter Property="AllowAutoHide" Value="True" />
        </Style>

        <!--  ComboBox Styling  -->
        <Style Selector="ComboBox">
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <!--  DatePicker Styling  -->
        <Style Selector="DatePicker">
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <!--  Checkbox custom styling  -->
        <Style Selector="CheckBox">
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Duration="0:0:0.2" Property="RenderTransform" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="CheckBox:pointerover">
            <Setter Property="RenderTransform" Value="scale(1.1)" />
        </Style>

        <!--  Enhanced hover effects for interactive elements  -->
        <Style Selector="ComboBox:pointerover">
            <Setter Property="BorderBrush" Value="#6366F1" />
        </Style>

        <!-- <Style Selector="DatePicker:pointerover"> -->
        <!--     <Setter Property="BorderBrush" Value="#6366F1" /> -->
        <!-- </Style> -->

        <!--  Smooth transitions for all interactive elements  -->
        <Style Selector="ComboBox, TextBox">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Duration="0:0:0.2" Property="BorderBrush" />
                    <BrushTransition Duration="0:0:0.2" Property="Background" />
                </Transitions>
            </Setter>
        </Style>


    </Application.Styles>
</Application>